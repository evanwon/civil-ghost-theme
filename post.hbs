{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<main class="content" role="main">

    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        {{! Everything below outputs content of the the post which has been published }}
            <span class="post-meta">
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>
                
                {{#if tags}}
                <ul>
                    {{#foreach tags}}
                        <li><a>#{{name}}</a></li>
                    {{/foreach}}
                </ul>
                {{/if}}
            </span>

        <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
        
        <!-- todo: 1) can we partial this 2) modal bio-->
        <!--
        {{#if author}}
        	<h4>By {{author.name}}</h4>
        {{/if}}
        -->

        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">

		{{! To use a custom share post section, create the file partials/custom-partial-share-post.hbs, then comment share-post and uncomment custom-partial-share-post below}}
		{{> share-post}}
		{{!> custom-partial-share-post}}

        </footer>

        {{/post}}

    </article>

</main>